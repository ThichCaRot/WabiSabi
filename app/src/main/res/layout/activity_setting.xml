<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/titleWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_back_24"
            android:padding="10dp" />

        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="3dp"
            android:text="Settings"
            android:textSize="45sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/titleWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingIcon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="My account"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingVoice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/microphone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingVoice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="Voice"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingLanguage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/internet"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingLanguage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="Language"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingVolumn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/volume"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingVolumn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="Volume"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/settingIcon7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/bell"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/settingItem7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="30sp"
                android:textStyle="normal"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/icon_add_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow_forward_24"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/settingIcon8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/moon_fill"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/settingItem8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Night mode"
                android:textSize="30sp"
                android:textStyle="normal"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Switch
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingAdvance"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/advancement"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingAdvance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="Advance"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="3dp"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/settingAbout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/info_button"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/settingAbout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left"
                android:text="About Carot"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="normal"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
